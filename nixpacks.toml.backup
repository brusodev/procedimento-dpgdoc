[phases.setup]
nixPkgs = ["python310", "python310Packages.pip", "nodejs-18_x"]

[phases.install]
cmds = [
    "cd backend && python -m pip install --upgrade pip && python -m pip install -r requirements.txt",
    "cd frontend && npm install",
    "cd frontend && npm run build"
]

[phases.build]
cmds = ["echo 'Build complete'"]

[start]
cmd = "cd backend && uvicorn app.main:app --host 0.0.0.0 --port ${PORT:-8000}"
